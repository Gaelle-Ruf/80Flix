    {% block navbar %}
    {# Set the current route to put the links in active class #}
    {% set currentRoute = app.request.attributes.get('_route') %}

    <header>

        {# LOGO PART #}
        <nav class="navbar navbar-expand-md {# navbar-dark bg-dark  #}sticky-top">
            <div class="container">
                <a class="navbar-brand {# text-danger #}" href=" {{path('home')}} ">
                    
                    <svg version="1.0" xmlns="http://www.w3.org/2000/svg"
                        width="32.000000pt" height="32.000000pt" viewBox="0 0 64.000000 64.000000"
                        preserveAspectRatio="xMidYMid meet">
                        <g transform="translate(0.000000,64.000000) scale(0.100000,-0.100000)"
                        fill="#F904EE" stroke="none">
                        <path d="M240 547 c-49 -16 -133 -102 -148 -153 -16 -56 -15 -81 4 -88 20 -8
                        428 -8 448 0 36 14 8 109 -51 174 -65 72 -158 97 -253 67z"/>
                        <path d="M80 245 c0 -13 33 -15 240 -15 207 0 240 2 240 15 0 13 -33 15 -240
                        15 -207 0 -240 -2 -240 -15z"/>
                        <path d="M180 171 c0 -5 7 -12 16 -15 20 -8 228 -8 248 0 43 16 3 24 -124 24
                        -77 0 -140 -4 -140 -9z"/>
                        <path d="M280 95 c0 -11 11 -15 40 -15 29 0 40 4 40 15 0 11 -11 15 -40 15
                        -29 0 -40 -4 -40 -15z"/>
                        </g>
                    </svg>

                    <strong>80's Flix</strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                {# PAGES LINKS #}

                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link {{(currentRoute == 'home')? 'active' }}" aria-current="page" href=" {{path('home')}} ">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{(currentRoute is same as 'show_list' or currentRoute is same as 'show_single_slug')? 'active' }}" href=" {{path('show_list')}} ">SÃ©ries</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{(currentRoute == 'show_fav')? 'active' }}" href="{{path ('show_fav')}}">Ma liste</a>
                        </li>
                        {# BACKOFFICE PROTECTED FOR ADMINS #}
                        {% if is_granted("ROLE_ADMIN") %}
                        <li class="nav-item">
                            <a class="nav-link {{(currentRoute is same as 'backoffice_tv_show_index' or currentRoute is same as 'backoffice_character_home' or currentRoute is same as 'backoffice_category_home' or currentRoute is same as 'backoffice_home')? 'active' }}" href="{{path('backoffice_home')}}">Backoffice</a>
                        </li>
                        {% endif %}

                    </ul>
                    
                    <div class="d-flex">
                        {% if app.user %}
                            {# IF ADMIN #}
                            {% if is_granted("ROLE_ADMIN") or is_granted("ROLE_SUPER_ADMIN")  %}
                            <p class="my-2 fw-bold" style="color: white;" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Administrateur"> 
                            {# IF USER #}
                            {% elseif is_granted("ROLE_USER") %}
                            <p class="my-2 fw-bold" style="color: #F904EE;" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Membre"> 
                            {% endif %}
                            {{app.user.firstname}} {{app.user.lastname}} 
                            </p>
                            <a class="btn {# btn-danger #} mx-2" href=" {{path('app_logout')}} ">Deconnexion</a>
                        {% else %}
                        {# IF VISITOR #}
                            <p class="my-2" style="color: #F904EE;" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Inscrivez-vous">
                            Visiteur </p> 
                            <a class="btn {# btn-danger #} mx-2" href=" {{path('app_login')}} ">Connexion</a>
                        {% endif %}
                    </div>
                    <form class="d-flex m" action=" {{path('search_index')}} ">
                        <input class="form-control me-2" type="search" placeholder="Ex : The mandalorian" aria-label="Search" name="q">
                        <button class="btn btn-outline-secondary" type="submit">GO</button>
                    </form>
                    
                </div>
            </div>
        </nav>

    
    {% endblock %}