{% extends 'backoffice/layout.html.twig' %}

{% block title %}
    {{user.firstname}} - Backoffice - {{parent()}}
{% endblock %}

{% block content %}
<section class="bo py-2 text-center container-fluid bo">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light"> {{ user.firstname }}</h1>        
        </div>
    </div>
</section>

<div class="container-fluid bo"> 

    <table style="color: white; width: 800px;" class="table  list-group-flush mx-auto">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname}}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname}}</td>
            </tr>
            <tr>
                <th>Rôle</th>
                <td>{{ user.roles[0]}}</td>
            </tr>
        </tbody>
        
</div>
    </table>
    <div class="input-group-sm mb-3 mx-auto text-center" style="width: 400px;">
        <a class="badge btn-bo edit" href="{{ path('user_update', {'id': user.id}) }}">Modifier</a>
            {{ include('backoffice/user/delete.html.twig') }}
        <a class="badge btn-bo return" href="{{ path('user_home') }}">Retour à la liste</a>
    </div>
</main>
{% endblock %}
