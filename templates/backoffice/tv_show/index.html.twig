{% extends 'backoffice/layout.html.twig' %}

{% block title %}TvShows - Backoffice - {{parent()}}{% endblock %}

{% block content %}


        <section class="bo py-2 text-center container-fluid bo">
            <div class="row py-lg-5">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <h1 class="fw-light">Liste des séries</h1>
                </div>
            </div>
        </section>

    <table class="table list-group-flush" style="color: white;">
        <thead>
            <tr>
                <th>#</th>
                <th>Titre</th>
                <th>Synopsis</th>
                <th>Image</th>
                <th>NbLikes</th>
                <th>Publication</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for tv_show in tv_shows %}
            <tr>
                <td>{{ tv_show.id }}</td>
                <td>{{ tv_show.title }}</td>
                <td>{{ tv_show.synopsis | u.truncate(150, '...')}}</td>
                <td>{{ tv_show.image }}</td>
                <td>{{ tv_show.nbLikes }}</td>
                <td>{{ tv_show.publishedAt ? tv_show.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="badge btn-bo detail" href="{{ path('backoffice_tv_show_slug', {'slug': tv_show.slug}) }}">Détail</a>
                    <a class="badge btn-bo edit" href="{{ path('backoffice_tv_show_edit_slug', {'slug': tv_show.slug}) }}">Modifier</a>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Pas de données trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


</main>
{% endblock %}
